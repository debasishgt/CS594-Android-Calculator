<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:background="@color/test">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/output"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/advFuncText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/funcDel"
            android:layout_alignParentRight="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/funcReset"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/funcDel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:layout_marginTop="10dp">





            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="7"
                android:id="@+id/num7"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_above="@+id/num4"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="8"
                android:id="@+id/num9"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_above="@+id/num5"
                android:layout_alignStart="@+id/num5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="9"
                android:id="@+id/num8"
                android:layout_row="0"
                android:layout_column="5"
                android:layout_above="@+id/num6"
                android:layout_toEndOf="@+id/num5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="/"
                android:id="@+id/signDiv"
                android:layout_row="0"
                android:layout_column="7"
                android:layout_above="@+id/num6"
                android:layout_toEndOf="@+id/num6" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="4"
                android:id="@+id/num4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_alignTop="@+id/num5"
                android:layout_toStartOf="@+id/num5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="5"
                android:id="@+id/num5"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_above="@+id/num1"
                android:layout_toEndOf="@+id/num1" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="6"
                android:id="@+id/num6"
                android:layout_row="1"
                android:layout_column="5"
                android:layout_above="@+id/num2"
                android:layout_toStartOf="@+id/signMul" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="*"
                android:id="@+id/signMul"
                android:layout_row="1"
                android:layout_column="7"
                android:layout_above="@+id/num3"
                android:layout_toEndOf="@+id/num3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="1"
                android:id="@+id/num1"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_alignTop="@+id/num2"
                android:layout_toStartOf="@+id/num2" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="2"
                android:id="@+id/num2"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_above="@+id/numDot"
                android:layout_toEndOf="@+id/numDot" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="3"
                android:id="@+id/num3"
                android:layout_row="2"
                android:layout_column="5"
                android:layout_alignTop="@+id/signMinus"
                android:layout_toStartOf="@+id/signMinus" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="-"
                android:id="@+id/signMinus"
                android:layout_row="2"
                android:layout_column="7"
                android:layout_above="@+id/signPlus"
                android:layout_toEndOf="@+id/funcEq" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="."
                android:id="@+id/numDot"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="0"
                android:id="@+id/num0"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_alignTop="@+id/funcEq"
                android:layout_toEndOf="@+id/num7" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="="
                android:id="@+id/funcEq"
                android:layout_row="3"
                android:layout_column="5"
                android:layout_alignTop="@+id/signPlus"
                android:layout_toEndOf="@+id/num0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="+"
                android:id="@+id/signPlus"
                android:layout_row="3"
                android:layout_column="7"
                android:layout_alignTop="@+id/numDot"
                android:layout_toEndOf="@+id/funcEq" />



    </RelativeLayout>



</LinearLayout>
