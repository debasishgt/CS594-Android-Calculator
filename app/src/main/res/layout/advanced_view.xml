<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:background="@color/test">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/advFuncText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/output"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="right"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/funcDel"
            android:layout_alignParentRight="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/funcReset"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/funcDel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:layout_marginTop="10dp">


        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">


            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="sin"
                android:id="@+id/signSin"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="cos"
                android:id="@+id/signCos"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="tan"
                android:id="@+id/signTan"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="i"
                android:id="@+id/signI"
                android:textAllCaps="false"
                android:layout_row="0"
                android:layout_column="7" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="ln"
                android:id="@+id/signLn"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="log"
                android:id="@+id/signLog"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="∏"
                android:id="@+id/signPi"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="e"
                android:id="@+id/signE"
                android:textAllCaps="false"
                android:layout_row="1"
                android:layout_column="7" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="%"
                android:id="@+id/signPer"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="!"
                android:id="@+id/signFac"
                android:layout_row="2"
                android:layout_column="3" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="√"
                android:id="@+id/signSqrt"
                android:layout_row="2"
                android:layout_column="5" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="^"
                android:id="@+id/signPow"
                android:layout_row="2"
                android:layout_column="7" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="("
                android:id="@+id/signOp"
                android:layout_row="3"
                android:layout_column="0" />

            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text=")"
                android:id="@+id/signCl"
                android:layout_row="3"
                android:layout_column="3" />


            <Button
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:text="="
                android:id="@+id/signEq2"
                android:layout_row="3"
                android:layout_column="7" />
        </GridLayout>


    </RelativeLayout>



</LinearLayout>
